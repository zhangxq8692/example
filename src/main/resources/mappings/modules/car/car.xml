<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhang.modules.car.dao.CarDao">
    <sql id="column">
      id,
      user_id,
      depart_addr,
      destination,
      depart_date,
      latest_date,
      announce_date,
      sum_person,
      exist_person,
      remark,
      create_date,
      update_date,
      update_flag
    </sql>
    <select id="findById" resultType="car" useCache="true">
        SELECT
          <include refid="column"/>
        FROM
          sys_car
        WHERE
          id=#{id}
    </select>
    <select id="findAll" resultType="car">
        SELECT
          <include refid="column"/>
        FROM
          sys_car
    </select>
    <update id="update">
        UPDATE sys_car SET
        user_id       =   #{userId},
        depart_addr   =   #{departAddr},
        destination   =   #{destination},
        depart_date   =   #{departDate},
        latest_date   =   #{latestDate},
        announce_date =   #{announceDate},
        sum_person    =   #{sumPerson},
        exist_person  =   #{existPerson},
        remark        =   #{remark},
        create_date   =   #{createDate},
        update_date   =   #{updateDate},
        update_flag   =   #{updateFlag}
        <where>
            id=#{id}
        </where>
    </update>
    <delete id="delete">
        DELETE FROM sys_point WHERE id=#{id}
    </delete>
    <insert id="insert">
        insert into sys_point
        (
            <include refid="column"/>
        )
        values
        (
            #{id},
            #{userId},
            #{departAddr},
            #{destination},
            #{departDate},
            #{latestDate},
            #{announceDate},
            #{sumPerson},
            #{existPerson},
            #{remark},
            #{createDate},
            #{updateDate},
            #{updateFlag}
        )
    </insert>
</mapper>