<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.zhang.modules.map.dao.WebMapDao">
    <sql id="column">
        id,
        p_lng,
        p_lat,
        sharing_id,
        create_date,
        update_date,
        update_flag
    </sql>
    <select id="findById" resultType="webMap" useCache="true">
        SELECT
          <include refid="column"/>
        FROM
          sys_point
        WHERE
          id=#{id}
    </select>
    <select id="findAll" resultType="webMap">
        SELECT
          <include refid="column"/>
        FROM
          sys_point
    </select>
    <update id="update">
        UPDATE sys_point SET
        p_lng=#{pLng},
        p_lat=#{pLat},
        sharing_id=#{sharingId},
        create_date=#{createDate},
        update_date=#{updateDate},
        update_flag=#{updateFlag}
        <where>
            id=#{id}
        </where>
    </update>
    <delete id="delete">
        DELETE FROM sys_point WHERE id=#{id}
    </delete>
    <insert id="insert">
        insert into sys_point
        (
        <include refid="column"/>
        )
        values
        (
        #{id},
        #{pLng},
        #{pLat},
        #{sharingId},
        #{createDate},
        #{updateDate},
        #{updateFlag}
        )
    </insert>
</mapper>